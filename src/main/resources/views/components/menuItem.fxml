<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.karol.controllers.MenuItemController">
   <children>
      <HBox fx:id="titleRoot" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="titleLbl" text="Label" textFill="WHITE" />
         </children>
      </HBox>
      <VBox fx:id="descriptionRoot" prefHeight="200.0" prefWidth="100.0" />
      <HBox fx:id="actionRoot" alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="decreaseBtn" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onDecrease" text="-" HBox.hgrow="ALWAYS" />
            <Label fx:id="quantityLbl" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS" />
            <Button fx:id="increaseBtn" maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onIncrease" text="+" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </children>
</VBox>
